<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMessage">
    <RelativeLayout
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDCACA">
        <TextView
            android:id="@+id/tvSendType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Send Message"
            android:textSize="@dimen/_15sdp"/>
        <Button
            android:id="@+id/btnAction"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:background="#FFFFFF"
            android:layout_marginRight="@dimen/_10sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chooseFriend"
        android:layout_below="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_15sdp"
            android:text="Choose Friend"/>
        <Spinner
            android:id="@+id/spFriend"
            android:layout_toRightOf="@+id/tvChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edtContent"
        android:layout_below="@+id/chooseFriend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:hint="Content"
        android:gravity="top"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_container"/>


</RelativeLayout>